<% include partials/header %>

<div class="ui main huge segment container">
	<div class="ui huge header">
		Edit Blog
	</div>

	<form class="ui form" action="/blogs/<%= data._id%>?_method=PUT" method="post">
		<div class="field">
			<label >Title</label>
			<input type="text"  name="title" value="<%= data.title%>">
		</div>
		<div class="field">
			<label >Image Link</label>
			<input type="text" name="image" value="<%= data.image%>">	
		</div>
		<div class="field">
   			<label>Your Blog Content</label>
    		<textarea rows="6" name="body" ><%= data.body%></textarea>
  		</div>
		<div class="field">
			<input class="ui big primary inverted button" type="submit">
		</div>	
	</form>
	
</div>


<% include partials/footer %>